<main class="max-w-4xl mx-auto grid grid-cols-1 md:grid-cols-4 gap-6 p-4">
    <div class="md:col-span-2 glass p-12">
        <span class="text-sm uppercase tracking-widest accent-text font-bold italic">Engineering & Lifestyle</span>
        <h1 class="text-6xl font-serif mt-2 mb-4 text-[#6B705C]">Helga.</h1>
        <p class="text-gray-500 italic">Arquitectando sistemas y capturando momentos.</p>
    </div>

    <div class="md:col-span-2 bento-card min-h-[300px] rounded-[40px] bg-cover bg-center" 
         style="background-image: url('img/tu-foto-boho.jpg'); border: 8px solid white;">
    </div>

    <div class="md:col-span-3 glass p-10">
        <h2 class="font-serif text-2xl mb-6 text-[#A5A58D]">Journal Entries âœ¨</h2>
        <ul class="space-y-6">
            {%- for story in collections.stories -%}
                <li class="border-b border-[#EFEBE4] pb-4">
                    <a href="{{ story.url }}" class="text-2xl hover:text-[#D4A373] transition duration-300 font-serif">
                        {{ story.data.title }}
                    </a>
                    <p class="text-sm text-gray-400 mt-1">{{ story.data.date }}</p>
                </li>
            {%- endfor -%}
        </ul>
    </div>
</main>