<main class="max-w-4xl mx-auto grid grid-cols-1 md:grid-cols-4 gap-4">
    <div class="md:col-span-2 glass p-10 flex flex-col justify-center">
        <h1 class="text-5xl font-bold italic tracking-tighter text-blue-500">Helga</h1>
        <p class="text-gray-400 mt-2 text-lg">Systems Engineer & Visual Storyteller</p>
    </div>

    <div class="md:col-span-2 glass p-8">
        <h2 class="text-sm font-semibold text-gray-500 uppercase tracking-widest mb-4">Latest Logs</h2>
        <ul class="space-y-4">
            {%- for story in collections.stories -%}
                <li>
                    <a href="{{ story.url }}" class="text-xl hover:text-blue-400 transition">{{ story.data.title }}</a>
                </li>
            {%- endfor -%}
        </ul>
    </div>

    <div class="md:col-span-4 glass p-6 flex justify-around items-center">
        <span class="font-bold tracking-widest text-gray-400">MY TECH STACK:</span>
        <a href="#" class="hover:text-blue-400">iPhone 15</a>
        <a href="#" class="hover:text-blue-400">Instax Mini</a>
        <a href="#" class="hover:text-blue-400">Family Candles</a>
    </div>
</main>